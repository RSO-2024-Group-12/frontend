{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint . --ext .ts,.js,.html,.json",
    "lint:fix": "eslint . --ext .ts,.js,.html,.json --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-api:izdelki": "openapi-generator-cli generate -i http://localhost:8080/q/openapi -g typescript-angular -o src/app/api/izdelki --skip-validate-spec",
    "generate-api:kosarica": "openapi-generator-cli generate -i http://localhost:8081/q/openapi -g typescript-angular -o src/app/api/kosarica --skip-validate-spec",
    "generate-api:narocila": "openapi-generator-cli generate -i http://localhost:8083/q/openapi -g typescript-angular -o src/app/api/narocila --skip-validate-spec",
    "generate-api:posiljanje": "openapi-generator-cli generate -i http://localhost:8084/q/openapi -g typescript-angular -o src/app/api/posiljanje --skip-validate-spec",
    "generate-api:skladisce": "openapi-generator-cli generate -i http://localhost:8082/q/openapi -g typescript-angular -o src/app/api/skladisce --skip-validate-spec",
    "generate-api:nakup": "openapi-generator-cli generate -i http://localhost:8085/q/openapi -g typescript-angular -o src/app/api/nakup --skip-validate-spec",
    "generate-api": "pnpm run generate-api:izdelki && pnpm run generate-api:kosarica && pnpm run generate-api:narocila && pnpm run generate-api:posiljanje && pnpm run generate-api:skladisce && pnpm run generate-api:nakup"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "pnpm@9.8.0",
  "dependencies": {
    "@angular/animations": "^21.0.6",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@primeng/themes": "^21.0.2",
    "@primeuix/themes": "^2.0.2",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "primeicons": "^7.0.0",
    "primeng": "^21.0.2",
    "rxjs": "~7.8.0",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@openapitools/openapi-generator-cli": "^2.26.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "prettier": "3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.8"
  }
}
